@page
@model Bookly.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Dodaj książkę";
}

<h2>➕ Dodaj książkę</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Book.Title" class="form-label"></label>
        <input asp-for="Book.Title" class="form-control" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Book.Author" class="form-label"></label>
        <input asp-for="Book.Author" class="form-control" />
        <span asp-validation-for="Book.Author" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Book.Year" class="form-label"></label>
        <input asp-for="Book.Year" class="form-control" />
        <span asp-validation-for="Book.Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kategorie</label><br />
        @foreach (var category in Model.AllCategories)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="SelectedCategoryIds" value="@category.Id" />
                <label class="form-check-label">@category.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-page="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}