@page
@model Bookly.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Książki";
}

<h1 class="mb-4">
    <i class="bi bi-journal-bookmark"></i> Lista książek
</h1>

<p>
    <a class="btn btn-success" asp-page="Create">➕ Dodaj nową książkę</a>
</p>

@if (Model.Books != null && Model.Books.Any())
{
    <table class="table table-striped">
        <thead class="table-light">
        <tr>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Rok</th>
            <th>Kategorie</th>
            <th>Status</th> <!-- teraz przedostatnia -->
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td>
                    @if (book.BookCategories.Any())
                    {
                        @string.Join(", ", book.BookCategories.Select(bc => bc.Category.Name))
                    }
                    else
                    {
                        <span class="text-muted">brak</span>
                    }
                </td>
                <td>@(book.IsBorrowed ? "Wypożyczona" : "Dostępna")</td> <!-- przeniesione tutaj -->
                <td>
                    <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@book.Id">✏️ Edytuj</a>
                    <a class="btn btn-info btn-sm" asp-page="Details" asp-route-id="@book.Id">ℹ️ Szczegóły</a>
                    <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@book.Id">🗑 Usuń</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Brak książek w bazie danych.</p>
}