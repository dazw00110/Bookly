@page "{id:int}"
@model Bookly.Pages.Categories.BooksModel
@{
    ViewData["Title"] = "Książki w kategorii";
}

<h2 class="mb-4">📚 Książki w kategorii: <span class="text-primary">@Model.CategoryName</span></h2>

@if (Model.Books.Any())
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Rok</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td>
                    @if (book.IsBorrowed)
                    {
                        <span class="badge bg-danger">Wypożyczona</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Dostępna</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Brak książek przypisanych do tej kategorii.</div>
}