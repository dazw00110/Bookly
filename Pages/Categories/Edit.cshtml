@page "{id:int}"
@model Bookly.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edytuj kategorię";
}

<h1>✏️ Edytuj kategorię</h1>

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="mb-3">
        <label asp-for="Category.Name" class="form-label"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-page="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}