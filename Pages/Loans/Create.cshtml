@page
@model Bookly.Pages.Loans.CreateModel
@{
    ViewData["Title"] = "Nowe wypożyczenie";
}

<h2>➕ Nowe wypożyczenie</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Klient</label>
        <select asp-for="Loan.ClientId" asp-items="Model.Clients" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Książka</label>
        <select asp-for="Loan.BookId" asp-items="Model.Books" class="form-select"></select>
    </div>

    <button type="submit" class="btn btn-primary">Wypożycz</button>
    <a asp-page="Index" class="btn btn-secondary">Anuluj</a>
</form>