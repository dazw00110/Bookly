@page
@model Bookly.Pages.Loans.DetailsModel
@{
    ViewData["Title"] = "Szczegóły wypożyczenia";
}

<h2>🔍 Szczegóły wypożyczenia</h2>

<div class="mb-3">
    <strong>Książka:</strong> @Model.Loan.Book.Title<br />
    <strong>Autor:</strong> @Model.Loan.Book.Author<br />
    <strong>Klient:</strong> @Model.Loan.Client.FirstName @Model.Loan.Client.LastName<br />
    <strong>Email:</strong> @Model.Loan.Client.Email<br />
    <strong>Data wypożyczenia:</strong> @Model.Loan.LoanDate.ToShortDateString()<br />
    <strong>Data zwrotu:</strong> @(Model.Loan.ReturnDate?.ToShortDateString() ?? "—")
</div>

<a asp-page="Edit" asp-route-id="@Model.Loan.Id" class="btn btn-warning">✏️ Edytuj</a>
<a asp-page="Index" class="btn btn-secondary">← Wróć</a>