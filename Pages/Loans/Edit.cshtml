@page
@model Bookly.Pages.Loans.EditModel
@{
    ViewData["Title"] = "Zwrot książki";
}

<h2>📤 Zwrot książki</h2>

<div class="mb-3">
    <strong>Książka:</strong> @Model.Loan.Book.Title<br />
    <strong>Klient:</strong> @Model.Loan.Client.FirstName @Model.Loan.Client.LastName<br />
    <strong>Data wypożyczenia:</strong> @Model.Loan.LoanDate.ToShortDateString()
</div>

<form method="post">
    <input type="hidden" asp-for="Loan.Id" />
    <div class="mb-3">
        <label asp-for="Loan.ReturnDate" class="form-label">Data zwrotu</label>
        <input asp-for="Loan.ReturnDate" class="form-control" type="date" />
        <span asp-validation-for="Loan.ReturnDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Zwróć książkę</button>
    <a asp-page="Index" class="btn btn-secondary">Anuluj</a>
</form>