@page
@model Bookly.Pages.Loans.IndexModel
@{
    ViewData["Title"] = "Wypożyczenia";
}

<h2>📚 Wypożyczenia</h2>

<a asp-page="Create" class="btn btn-primary mb-3">➕ Nowe wypożyczenie</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>📖 Książka</th>
        <th>👤 Klient</th>
        <th>📅 Data wypożyczenia</th>
        <th>📅 Data zwrotu</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var loan in Model.Loans)
    {
        <tr>
            <td>@loan.Book.Title</td>
            <td>@loan.Client.FirstName @loan.Client.LastName</td>
            <td>@loan.LoanDate.ToShortDateString()</td>
            <td>@(loan.ReturnDate?.ToShortDateString() ?? "—")</td>
            <td>
                <a asp-page="Details" asp-route-id="@loan.Id" class="btn btn-sm btn-info">🔍</a>
                <a asp-page="Edit" asp-route-id="@loan.Id" class="btn btn-sm btn-warning">✏️</a>
                <a asp-page="Delete" asp-route-id="@loan.Id" class="btn btn-sm btn-danger">🗑️</a>
            </td>
        </tr>
    }
    </tbody>
</table>