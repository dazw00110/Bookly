@page
@model Bookly.Pages.Clients.IndexModel
@{
    ViewData["Title"] = "Lista klientów";
}

<h2 class="mb-4">👤 Klienci</h2>

<a asp-page="Create" class="btn btn-success mb-3">➕ Dodaj klienta</a>

@if (Model.Clients.Any())
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Imię i nazwisko</th>
            <th>E-mail</th>
            <th>Liczba wypożyczeń</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.FirstName @client.LastName</td>
                <td>@client.Email</td>
                <td>@client.Loans.Count</td>
                <td>
                    <a asp-page="Details" asp-route-id="@client.Id" class="btn btn-sm btn-info">🔍 Szczegóły</a>
                    <a asp-page="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-warning">✏️ Edytuj</a>
                    <a asp-page="Delete" asp-route-id="@client.Id" class="btn btn-sm btn-danger">🗑️ Usuń</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Brak klientów do wyświetlenia.</div>
}