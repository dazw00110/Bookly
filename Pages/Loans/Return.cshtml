@page "{id:int}"
@model Bookly.Pages.Loans.ReturnModel
@{
    ViewData["Title"] = "Zwrot książki";
}

<h2>📚 Zwrot książki</h2>

<div class="alert alert-info mt-3">
    Czy na pewno chcesz oznaczyć wypożyczenie książki 
    <strong>@Model.Loan.Book.Title</strong> jako <strong>zwrócone</strong> przez 
    <strong>@Model.Loan.Client.FullName</strong>?
</div>

<form method="post" class="mt-3">
    <button type="submit" class="btn btn-success">✅ Potwierdź zwrot</button>
    <a asp-page="./Index" class="btn btn-secondary">Anuluj</a>
</form>