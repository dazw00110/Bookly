<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BOOKLY</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand me-4" asp-page="/Index">📚 BOOKLY</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Books/Index">📚 Książki</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Categories/Index">🏷 Kategorie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Clients/Index">👤 Klienci</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Loans/Index">🔄 Wypożyczenia</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="footer py-3 bg-light border-top text-center">
        <div class="container">
            <span class="text-muted">© @DateTime.Now.Year – BOOKLY Biblioteka</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
